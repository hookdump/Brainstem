POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=brainstem
POSTGRES_PORT=5432

BRAINSTEM_API_PORT=8080
BRAINSTEM_AUTH_MODE=disabled
BRAINSTEM_MCP_AUTH_MODE=token
BRAINSTEM_JOB_BACKEND=inprocess
BRAINSTEM_JOB_SQLITE_PATH=.data/jobs.db
BRAINSTEM_JOB_WORKER_ENABLED=true
